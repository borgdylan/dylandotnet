{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "group": {"kind": "build", "isDefault": true},
            "dependsOn":[],
            "label": "build",
            "type": "shell",
            "command": "dotnet",
            "args": ["build", "-p:GenerateFullPaths=true", "-v:n"],
            "problemMatcher": [
                {
                    "owner": "dylandotnet",
                    "fileLocation": ["absolute"],
                    "pattern": {
                        "regexp": "^(.*)\\((\\d+)(,(\\d+))?\\):\\s*(error|warning)\\s*:\\s*(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 4,
                        "severity": 5,
                        "message": 6
                    }
                },
                "$msCompile"
            ]
        },
        {
            "group": {"kind": "test", "isDefault": true},
            "dependsOn":[],
            "label": "test",
            "type": "shell",
            "command": "dotnet",
            "args": ["test", "-p:GenerateFullPaths=true", "-v:n"],
            "problemMatcher": [
                {
                    "owner": "dylandotnet",
                    "fileLocation": ["absolute"],
                    "pattern": {
                        "regexp": "^(.*)\\((\\d+)(,(\\d+))?\\):\\s*(error|warning)\\s*:\\s*(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 4,
                        "severity": 5,
                        "message": 6
                    }
                },
                "$msCompile"
            ]
        },
        {
            "label": "restore",
            "type": "shell",
            "command": "dotnet",
            "args": ["restore"],
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}
