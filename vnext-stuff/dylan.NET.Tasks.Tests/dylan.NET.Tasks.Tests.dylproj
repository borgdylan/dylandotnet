<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <AssemblyName>dylan.NET.Tasks.Tests</AssemblyName>
        <OutputType>Library</OutputType>
        <Version>1.2.0.0</Version>

        <!-- <NetStandardImplicitPackageVersion Condition=" '$(TargetFramework)' == 'netstandard2.0' ">2.0.0</NetStandardImplicitPackageVersion> -->
        <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.7.1" />
        <PackageReference Include="xunit" Version="2.4.1" />
        <PackageReference Include="xunit.runner.visualstudio" Version="2.4.3">
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>

        <ProjectReference Include="..\dylan.NET.Tasks\dylan.NET.Tasks.dylproj" />

        <PackageReference Include="dylan.NET" Version="11.10.2.1" ExcludeAssets="Compile" PrivateAssets="All" />
    </ItemGroup>
</Project>
