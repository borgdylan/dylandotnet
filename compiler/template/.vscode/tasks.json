{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "msbuild",
    "args": [
        // Ask msbuild to generate full paths for file names.
        "/property:GenerateFullPaths=true"
    ],
    "taskSelector": "/t:",
    "tasks": [
        {
            "label": "build",
            "command": "msbuild",
            "args": [
                "/property:GenerateFullPaths=true",
                "/t:build"
            ],
            "problemMatcher": [
                {
                    "owner": "dylandotnet",
                    "fileLocation": [
                        "absolute"
                    ],
                    "pattern": {
                        "regexp": "^(.*)\\((\\d+)(,(\\d+))?\\):\\s*(error|warning)\\s*:\\s*(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 4,
                        "severity": 5,
                        "message": 6
                    }
                },
                "$msCompile"
            ],
            "group": {
                "_id": "build",
                "isDefault": false
            }
        },
        {
            "label": "restore",
            "command": "msbuild",
            "args": [
                "/property:GenerateFullPaths=true",
                "/t:restore"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}